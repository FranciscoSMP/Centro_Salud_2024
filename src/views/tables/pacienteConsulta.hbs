{{#if success_msg}}
<div id="success-alert" class="alert-overlay alert-center fade-out">
    <div class="col-md-2">
        <div class="alert alert-success text-center">{{success_msg}}</div>
    </div>
</div>
{{/if}}
<div class="container my-4">
    <h2 class="text-center mb-4">Lista de Relaciones Paciente Consulta</h2>
    {{#if pacienteConsulta.length}}
    <table class="table table-hover table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">DPI Paciente</th>
                <th scope="col">ID Consulta</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each pacienteConsulta}}
            <tr>
                <td>{{this.Paciente_Consulta}}</td>
                <td>{{this.DPI_Paciente}}</td>
                <td>{{this.Id_Consulta}}</td>
                <td>
                    <a href="/paciente_consulta/editar/{{this.Paciente_Consulta}}"
                        class="btn btn-sm btn-warning me-2">Editar</a>
                    <button type="submit" class="btn btn-sm btn-danger" data-bs-toggle="modal"
                        data-bs-target="#confirmDeleteModal"
                        onclick="setDeleteModal('la relaciÃ³n Paciente - Consulta del paciente con DPI', '{{this.DPI_Paciente}}', 'paciente_consulta', '{{this.Paciente_Consulta}}')">
                        Eliminar
                    </button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <div class="alert alert-warning text-center">No hay relaciones Paciente - Consulta disponibles en este momento.
    </div>
    {{/if}}
</div>