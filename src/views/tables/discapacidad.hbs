{{#if success_msg}}
<div id="success-alert" class="alert-overlay alert-center fade-out">
    <div class="col-md-2">
        <div class="alert alert-success text-center">{{success_msg}}</div>
    </div>
</div>
{{/if}}
{{#ifCond user.Id_Rol '==' 1}}
<div class="container my-4">
<h2 class="text-center mb-4">Lista de Discapacidades</h2>
{{#if discapacidad.length}}
<table class="table table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre de la Discapacidad</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each discapacidad}}
        <tr>
            <td>{{this.Id_Discapacidad}}</td>
            <td>{{this.Tipo_Discapacidad}}</td>
            <td>
                <a href="/discapacidad/editar/{{this.Id_Discapacidad}}" class="btn btn-sm btn-warning me-2">Editar</a>
                <button type="submit" class="btn btn-sm btn-danger" data-bs-toggle="modal"
                        data-bs-target="#confirmDeleteModal"
                        onclick="setDeleteModal('la discapacidad', '{{this.Tipo_Discapacidad}}', 'discapacidad', '{{this.Id_Discapacidad}}')">
                        Eliminar
                </button>
            </td>
        </tr>
        {{/each}}
    </tbody>
    {{else}}
    <div class="alert alert-warning text-center">No hay discapacidades disponibles en este momento.</div>
    {{/if}}
</table>
</div>
{{else ifCond user.Id_Rol '==' 2}}
<h2 class="text-center my-4">Acceso Denegado</h2>
<div class="container acceso-denegado">
    <p class="text-center">No tiene permisos para acceder a esta p√°gina.</p>
    <div class="text-center mt-4">
        <a href="/dashboard" class="btn btn-danger">Volver al Inicio</a>
    </div>
</div>
{{/ifCond}}