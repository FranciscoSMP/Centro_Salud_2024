{{#ifCond user.Id_Rol '==' 1}}
<h2 class="text-center my-4">Añadir Enfermero</h2>
<form action="/enfermero/guardar" method="POST" class="container">
    <div class="row">
        <p><font color="red">*</font> Son campos obligatorios</p>
        <div class="col-md-4 mb-3">
            <label for="DPI_Enfermero">DPI del Enfermero <font color="red">*</font></label>
            <input type="text" name="DPI_Enfermero" id="DPI_Enfermero" class="form-control" required>
        </div>
        <div class="col-md-4 mb-3">
            <label for="Primer_Nombre">Primer Nombre <font color="red">*</font></label>
            <input type="text" name="Primer_Nombre" id="Primer_Nombre" class="form-control" required>
        </div>
        <div class="col-md-4 mb-3">
            <label for="Segundo_Nombre">Segundo Nombre</label>
            <input type="text" name="Segundo_Nombre" id="Segundo_Nombre" class="form-control">
        </div>
        <div class="col-md-4 mb-3">
            <label for="Tercer_Nombre">Tercer Nombre</label>
            <input type="text" name="Tercer_Nombre" id="Tercer_Nombre" class="form-control">
        </div>
        <div class="col-md-4 mb-3">
            <label for="Primer_Apellido">Primer Apellido <font color="red">*</font></label>
            <input type="text" name="Primer_Apellido" id="Primer_Apellido" class="form-control" required>
        </div>
        <div class="col-md-4 mb-3">
            <label for="Segundo_Apellido">Segundo Apellido <font color="red">*</font></label>
            <input type="text" name="Segundo_Apellido" id="Segundo_Apellido" class="form-control">
        </div>
        <div class="col-md-4 mb-3">
            <label for="Id_Municipio">Municipio <font color="red">*</font></label>
            <select name="Id_Municipio" id="Id_Municipio" class="form-control">
                <option value="" disabled selected>Seleccione un Campo</option>
                {{#each municipio}}
                <option value="{{this.Id_Municipio}}">{{this.Nombre_Municipio}}</option>
                {{/each}}
            </select>
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Añadir</button>
        <a href="/" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
{{else ifCond user.Id_Rol '==' 2}}
<h2 class="text-center my-4">Acceso Denegado</h2>
<div class="container acceso-denegado">
    <p class="text-center">No tiene permisos para acceder a esta página.</p>
    <div class="text-center mt-4">
        <a href="/dashboard" class="btn btn-danger">Volver al Inicio</a>
    </div>
</div>
{{/ifCond}}