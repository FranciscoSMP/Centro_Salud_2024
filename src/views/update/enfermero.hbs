{{#ifCond user.Id_Rol '==' 1}}
<h2 class="text-center my-4">Actualizar Enfermero</h2>
<form action="/enfermero/actualizar" method="POST" class="container">
    <input type="hidden" name="DPI_Enfermero" value="{{enfermero.DPI_Enfermero}}" />
    <div class="row">
        <div class="col-md-4 mb-3">
            <label for="Primer_Nombre">Primer Nombre</label>
            <input type="text" name="Primer_Nombre" id="Primer_Nombre" class="form-control" value="{{enfermero.Primer_Nombre}}" required>
        </div>
        <div class="col-md-4 mb-3">
            <label for="Segundo_Nombre">Segundo Nombre</label>
            <input type="text" name="Segundo_Nombre" id="Segundo_Nombre" class="form-control" value="{{enfermero.Segundo_Nombre}}">
        </div>
        <div class="col-md-4 mb-3">
            <label for="Tercer_Nombre">Tercer Nombre Opcional</label>
            <input type="text" name="Tercer_Nombre" id="Tercer_Nombre" class="form-control" value="{{enfermero.Tercer_Nombre}}">
        </div>
        <div class="col-md-4 mb-3">
            <label for="Primer_Apellido">Primer Apellido</label>
            <input type="text" name="Primer_Apellido" id="Primer_Apellido" class="form-control" value="{{enfermero.Primer_Apellido}}" required>
        </div>
        <div class="col-md-4 mb-3">
            <label for="Segundo_Apellido">Segundo Apellido</label>
            <input type="text" name="Segundo_Apellido" id="Segundo_Apellido" class="form-control" value="{{enfermero.Segundo_Apellido}}">
        </div>
        <div class="col-md-4 mb-3">
            <label for="Id_Municipio">Municipio</label>
            <select name="Id_Municipio" id="Id_Municipio" class="form-control">
                {{#each municipio}}
                <option value="{{this.Id_Municipio}}" {{#ifCond this.Id_Municipio '==' ../paciente.Id_Municipio}}selected{{/ifCond}}>{{this.Nombre_Municipio}}</option>
                {{/each}}
            </select>
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Actualizar</button>
        <a href="/enfermero/table" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
{{else ifCond user.Id_Rol '==' 2}}
<h2 class="text-center my-4">Acceso Denegado</h2>
<div class="container acceso-denegado">
    <p class="text-center">No tiene permisos para acceder a esta p√°gina.</p>
    <div class="text-center mt-4">
        <a href="/dashboard" class="btn btn-danger">Volver al Inicio</a>
    </div>
</div>
{{/ifCond}}