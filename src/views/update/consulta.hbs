<h2 class="text-center my-4">Actualizar Consulta</h2>
<form action="/consulta/actualizar" method="POST" class="container form-General">
    <input type="hidden" name="Id_Consulta" value="{{consulta.Id_Consulta}}" />
    <div class="form-group mb-3">
        <label for="Fecha_Consulta" class="form-label">Fecha de Consulta</label>
        <input type="date" name="Fecha_Consulta" id="Fecha_Consulta" class="form-control"
            value="{{consulta.Fecha_Consulta}}" required>
        <p></p>
        <label for="DPI_Paciente">DPI del Paciente</label>
        <select name="DPI_Paciente" id="DPI_Paciente" class="form-control" required>
            {{#each pacientes}}
            <option value="{{this.DPI}}" {{#ifCond this.DPI '==' ../paciente.DPI_Paciente}}selected{{/ifCond}}>
                {{this.DPI}}</option>
            {{/each}}
        </select>
    </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Actualizar</button>
        <a href="/consulta/table" class="btn btn-secondary">Cancelar</a>
    </div>
</form>