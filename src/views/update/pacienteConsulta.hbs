<h2 class="text-center my-4">Actualizar Paciente - Consulta</h2>
<form action="/paciente_consulta/actualizar" method="POST" class="container form-General">
    <input type="hidden" name="Paciente_Consulta" value="{{pacienteConsulta.Paciente_Consulta}}" />
    <div class="form-group mb-3">
        <label for="DPI_Paciente" class="form-label">DPI del paciente</label>
        <select name="DPI_Paciente" id="DPI_Paciente" class="form-control" required>
            {{#each pacientes}}
            <option value="{{this.DPI}}" {{#ifCond this.DPI '=='
            ../paciente.DPI_Paciente}}selected{{/ifCond}}>{{this.DPI}}</option>
            {{/each}}
        </select>
        <p></p>
        <label for="Id_Consulta" class="form-label">Consulta</label>
        <select name="Id_Consulta" id="Id_Consulta" class="form-control" required>
            {{#each tipo_consultas}}
            <option value="{{this.Id_Consulta}}" {{#ifCond this.Id_Consulta '==' ../pacienteConsulta.Id_Consulta}}
                selected {{/ifCond}}>
                {{this.Tipo_Consulta}}</option>
            {{/each}}
        </select>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Actualizar</button>
        <a href="/paciente_consulta/table" class="btn btn-secondary">Cancelar</a>
    </div>
</form>